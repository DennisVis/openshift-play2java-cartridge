#!/bin/bash
# The logic to start up your application should be put in this
# script. The application will work only if it binds to
# $OPENSHIFT_INTERNAL_IP:8080 


# loads $PLAY_PARAMS
. /hooks/load_config

if [[ ! $? -eq 0 ]]; then
	exit $?
fi

LOG_FILE="${OPENSHIFT_LOG_DIR}play.log"

APP_COMMAND="${OPENSHIFT_PLAY2JAVA_DIR} ${OPENSHIFT_HOMEDIR}usr/sbin/playframework/play clean compile start $PLAY_PARAMS "\
"-Dhttp.port=8080 "\
"-Dhttp.address=${OPENSHIFT_INTERNAL_IP} "\
"-Dconfig.resource=openshift.conf"

echo $APP_COMMAND &>> $LOG_FILE
nohup bash -c "${APP_COMMAND} &>> ${LOG_FILE} 2>&1" &> /dev/null &
